<Window x:Class="WpfClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Клиент" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Введите сообщение:" />
        <TextBox Name="MessageBoxInput" Height="30" Margin="0,10,0,0"/>
        <Button Content="Отправить сообщение" Click="SendMessageButton_Click" Margin="0,10,0,0"/>
        <TextBlock Text="Ответ от сервера:" Margin="0,20,0,0"/>
        <TextBox Name="ResponseBox" Height="30" IsReadOnly="True"/>
    </StackPanel>
</Window>