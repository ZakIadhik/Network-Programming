<Window x:Class="WpfServerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сервер" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Сообщения от клиента:" />
        
       
        <TextBox Name="MessagesBox" Height="150" IsReadOnly="True" TextWrapping="Wrap">
            <TextBox.ToolTip>
                <ToolTip Content="Введите сообщение от клиента" />
            </TextBox.ToolTip>
        </TextBox>
        
        <Button Content="Запустить сервер" Click="StartServer_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>